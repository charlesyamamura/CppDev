{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build houses",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=gnu++14",
        "-g",
        "*.cpp",
        "-o",
        "houses"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
